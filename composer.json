{
    "name": "xinhus/persona",
    "authors": [
        {
            "name": "Rafael Cardoso",
            "email": "xinhus@gmail.com"
        }
    ],
    "require": {
        "lcobucci/jwt": "^3.2"
    },
    "require-dev": {
        "object-calisthenics/phpcs-calisthenics-rules": "^3.4",
        "phpunit/phpunit": "^7.5",
        "friendsofphp/php-cs-fixer": "^2.13"
    },
    "autoload": {
        "psr-4": {
            "Persona\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Persona\\": "test/",
            "Persona\\": "test/_support"
        }
    },
    "scripts": {
        "test": "phpunit test --colors=always",
        "sniffer": "phpcs src -sp --standard=vendor/object-calisthenics/phpcs-calisthenics-rules/src/ObjectCalisthenics/ruleset.xml"
    }
}
